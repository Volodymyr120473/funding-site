# ===============================
# API endpoints
# ===============================
BYBIT_REST=https://api.bybit.com
COINGECKO_REST=https://api.coingecko.com/api/v3

# ===============================
# HTTP / Runtime
# ===============================
HTTP_TIMEOUT=15
USER_AGENT=neg-funding-tracker-ts/1.0

# ===============================
# Funding filters (base logic)
# ===============================
# Поріг від’ємного фандінгу
# -0.0001 = -0.01%
FUNDING_CUT_NEG=-0.0001
FUNDING_CUT_POS=0.00005




# Мінімальний market cap (USD)
MIN_MARKET_CAP_USD=100000000

# Мінімальний оборот за 24h (USD)
MIN_TURNOVER_24H_USD=2000000

# Скільки рядків повертати
LIMIT=3

# ===============================
# Alert logic (future step)
# ===============================
# Глибокий негативний funding для алерта
ALERT_FUNDING_CUT_NEG=-0.01
ALERT_FUNDING_CUT_POS=0.002

# Мін. оборот для алерта
ALERT_TURNOVER_24H_USD=10000000

# ===============================
# History / Storage (future)
# ===============================
# Скільки годин зберігати history
HISTORY_KEEP_HOURS=72

# Шлях до history-файлу
HISTORY_PATH=./data/history.json

# ===============================
# Server
# ===============================
PORT=4666
